						org.eclipse.sensinact.gateway.nthbnd.http.callback;version="[2.0,3)",\
						org.eclipse.sensinact.gateway.sthbnd.wb,\
						org.eclipse.sensinact.gateway.sthbnd.wb.callback,\
						org.eclipse.sensinact.gateway.sthbnd.wb.packet,\
						org.eclipse.sensinact.gateway.sthbnd.wb.servlet,\
						org.eclipse.sensinact.gateway.sthbnd.wb.smartbehaviour,\
						org.eclipse.sensinact.gateway.util;version="[2.0,3)",\
						org.eclipse.sensinact.gateway.util.xml;version="[2.0,3)",\
						org.osgi.framework;version="[1.9,2)",\
						org.osgi.service.component;version="[1.4,2)",\
						org.slf4j;version="[1.7,2)",\
						org.json;version="20080701"
						-sources: true
						-contract: *
						-exportcontents: *
						]]>

					</bnd>
				</configuration>
			</plugin>
			<plugin>
				<groupId>biz.aQute.bnd</groupId>
				<artifactId>bnd-baseline-maven-plugin</artifactId>
